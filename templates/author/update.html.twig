{% extends 'author/newAuthor.html.twig' %}

{% block title %}

Modification Auteur

{% endblock %}

{% block stylesheets %}
    <style>
       

        /* pour aligner les labels et les champs de formulaire verticalement */
        form label,
        form input {
            display: flex;
            align-items: center;
        }

        /* pour donner une largeur fixe aux champs de formulaire */
        form input[type="text"],
        
        {
            width: 300px;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
        }

        form textarea{
            width: 300px;
            height: 300px;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;

        }

        /* pour styliser les boutons de formulaire */
        form button {
            display: block;
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px;
            border: none;
            cursor: pointer;
            width: 10%;
            height: 20%;
        }
    </style>
{% endblock %}



    {% block pageTitle %} Modifier l'auteur {{ author.name }} {% endblock %}
    {% block nameValue %} {{ author.name }} {% endblock %}
    {% block descriptionValue %} {{author.description}}  {% endblock %}
    {% block imageUrlValue %} {{ author.imageUrl }} {% endblock %}